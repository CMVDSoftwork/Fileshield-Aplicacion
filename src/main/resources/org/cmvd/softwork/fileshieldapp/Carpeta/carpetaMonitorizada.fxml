                fx:id="btnSeleccionarCarpeta"
                onAction="#manejarSeleccionCarpeta"
                prefWidth="300"/>

        <Label fx:id="labelEstado" wrapText="true" style="-fx-font-size: 14px;" />

        <HBox spacing="15" alignment="CENTER">
            <PasswordField fx:id="inputContrasena" promptText="Ingresa la contraseÃ±a" />
            <Button text="Iniciar Monitoreo"
                    fx:id="btnIniciarMonitoreo"
                    onAction="#iniciarMonitoreo"
                    visible="false" />
            <Button text="Eliminar Carpeta"
                    fx:id="btnEliminarCarpeta"
                    onAction="#eliminarCarpeta"
                    visible="false" />
        </HBox>

    </VBox>
</AnchorPane>
