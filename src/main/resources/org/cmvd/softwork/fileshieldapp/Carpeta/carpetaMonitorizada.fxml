<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.cmvd.softwork.fileshieldapp.Controller.Carpeta.CarpetaMonitorizadaController"
            prefWidth="450" prefHeight="300">

    <VBox spacing="20" alignment="CENTER"
