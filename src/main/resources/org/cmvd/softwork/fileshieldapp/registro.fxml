<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="org.cmvd.softwork.fileshieldapp.Controller.RegistroController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" hgap="10" vgap="10">

    <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Apellido Paterno:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="txtApellidoP" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Apellido Materno:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="txtApellidoM" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Correo:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="txtCorreo" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Contraseña:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <PasswordField fx:id="txtContrasena" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Confirmar contraseña:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <PasswordField fx:id="txtConfirmar" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Button text="Registrarse"
            onAction="#handleRegistro"
            GridPane.rowIndex="6" GridPane.columnIndex="1"/>
</GridPane>

